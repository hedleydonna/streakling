<%# Only proceed if session is still valid %>
<% if session[:time_machine] && session[:time_machine]['active'] %>
  <%= turbo_stream.replace "time_machine_card" do %>
    <%= render 'dashboard/time_machine_card' %>
  <% end %>

  <%# Only update habit cards if session is valid %>
  <% if @habits && @habits.any? %>
    <% @habits.each do |habit| %>
      <%= turbo_stream.replace "habit_#{habit.id}" do %>
        <%= turbo_frame_tag "habit_#{habit.id}" do %>
          <% creature = habit.streakling_creature %>
          <div class="bg-white/95 backdrop-blur-lg rounded-3xl shadow-2xl p-10 transform hover:scale-105 transition-all duration-300 border-4 border-purple-100 h-[600px] flex flex-col overflow-hidden">
            <!-- Header section - fixed height -->
            <div class="flex-shrink-0">
              <div class="text-4xl mb-4 text-center">
                <%= creature&.emoji || "ðŸ‰" %>
              </div>

              <h3 class="<%= creature&.eternal? ? 'text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-yellow-500 to-yellow-600 mb-2 text-center' : 'text-2xl font-bold text-gray-800 mb-2 text-center' %>">
                <%= creature&.streakling_name.presence || "Little One" %>
                <% if creature&.eternal? %>
                  <span class="text-yellow-500 text-sm">âœ¨ ETERNAL âœ¨</span>
                <% end %>
              </h3>
              <p class="text-xl text-purple-600 font-medium mb-4 text-center">
                <span class="text-2xl mr-2"><%= creature&.stage_emoji || "ðŸ¥š" %></span>
                <%= creature&.stage_name || "Egg" %> <%= (creature&.animal_type || "dragon").capitalize %>
              </p>
            </div>

            <!-- Message section - fixed height -->
            <div class="flex-shrink-0 my-8 p-6 bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl border-2 border-purple-200 h-[120px] flex items-center">
              <p class="text-xl italic text-gray-700 leading-relaxed w-full text-center">
                "<%= creature&.message || "I'm waiting for you..." %>"
              </p>
            </div>

            <!-- Status section - fixed height -->
            <div class="flex-shrink-0 flex justify-around text-lg font-medium mb-4 h-[30px]">
              <div>Mood: <span class="text-2xl"><%= creature&.mood_emoji || "ðŸ˜Š" %></span></div>
              <div>Streak: <span class="text-indigo-600"><%= creature&.current_streak || 0 %> days</span></div>
            </div>

            <!-- Description section - fixed height -->
            <div class="flex-shrink-0 mb-4 h-[50px] flex items-center justify-center">
              <% if habit.description.present? %>
                <p class="text-sm text-gray-600 text-center italic px-4">
                  "<%= habit&.description %>"
                </p>
              <% else %>
                <p class="text-sm text-gray-400 text-center italic">
                  No description
                </p>
              <% end %>
            </div>

            <!-- Dead section placeholder - fixed height -->
            <div class="flex-shrink-0 mb-4 h-[60px]">
              <% if creature&.is_dead %>
                <div class="p-3 bg-red-100 border-4 border-red-400 rounded-2xl h-full flex flex-col justify-center">
                  <p class="text-xl font-bold text-red-700">Dead</p>
                  <p class="text-sm">7 perfect days to revive!</p>
                </div>
              <% end %>
            </div>

            <!-- Buttons section - fixed height -->
            <div class="flex-shrink-0 mt-auto">
              <div class="flex justify-center space-x-6 mb-4">
                <%= link_to "Edit", edit_habit_path(habit), data: { turbo_frame: "_top" }, class: "bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-full text-lg font-medium transition" %>
                <%= button_to "Delete", habit_path(habit), method: :delete,
                    data: { turbo_confirm: "Delete this habit and its Streakling forever?" },
                    class: "bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-full text-lg font-medium transition" %>
              </div>

              <%= button_to toggle_habit_path(habit), method: :patch,
                  class: "block w-full p-6 rounded-2xl shadow-lg transition #{habit.completed_today? ? 'bg-green-100 border-4 border-green-500' : 'bg-white hover:bg-gray-50 border-2 border-gray-300'}" do %>
                <div class="flex items-center justify-between">
                  <div class="text-left">
                    <span class="text-2xl mr-4"><%= habit.display_emoji %></span>
                    <span class="text-lg font-bold"><%= habit.habit_name %></span>
                  </div>
                  <div class="text-3xl font-light">
                    <%= habit.completed_today? ? "âœ“" : "â—‹" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
