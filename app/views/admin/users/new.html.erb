<div class="min-h-screen bg-gray-100 py-12 px-4">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-800">Create New User</h1>
          <p class="text-gray-600">Add a new user to the system</p>
        </div>
        <%= link_to "Back to Users", admin_users_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium" %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <%= form_with(model: @user, url: admin_users_path, method: :post, local: true) do |form| %>
        <div class="space-y-6">
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.password_field :password, placeholder: "Leave blank for password reset", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div>
              <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
          </div>

          <div>
            <%= form.label :admin, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="flex items-center">
              <%= form.check_box :admin, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= form.label :admin, "Administrator privileges", class: "ml-2 block text-sm text-gray-900" %>
            </div>
          </div>

          <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
            <div class="text-sm text-yellow-800">
              <strong>Note:</strong> Password is optional. If left blank, the user will need to reset their password before logging in.
            </div>
          </div>

          <div class="flex justify-end space-x-4 pt-4">
            <%= link_to "Cancel", admin_users_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md font-medium" %>
            <%= form.submit "Create User", class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
