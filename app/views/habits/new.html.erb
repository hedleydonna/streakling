<div class="min-h-screen bg-gradient-to-b from-purple-50 to-pink-50 py-12">
  <div class="max-w-md mx-auto bg-white rounded-2xl shadow-xl p-8">
    <h1 class="text-4xl font-bold text-center mb-8">Add a Daily Habit</h1>

    <%= form_with model: @habit, local: true, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :name, class: "block text-xl font-medium mb-2" %>
        <%= f.text_field :name, placeholder: "Drink water, Read 10 pages", class: "w-full px-4 py-3 rounded-lg border text-lg", required: true %>
      </div>

      <div>
        <%= f.label :emoji, class: "block text-xl font-medium mb-2" %>
        <%= f.text_field :emoji, placeholder: "Water, Book, Running Man", class: "w-full px-4 py-3 rounded-lg border text-lg", required: true %>
      </div>

      <%= f.submit "Add Habit", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white text-xl py-4 rounded-full shadow-lg transition" %>
    <% end %>

    <% if @habit.errors.any? %>
      <div class="mt-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
        <ul class="list-disc list-inside">
          <% @habit.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="text-center mt-6">
      <%= link_to "â† Back", root_path, class: "text-indigo-600 hover:underline text-lg" %>
    </div>
  </div>
</div>
