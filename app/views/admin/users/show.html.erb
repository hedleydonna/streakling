<div class="min-h-screen bg-gray-100 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-800">User Details</h1>
          <p class="text-gray-600"><%= @user.email %></p>
        </div>
        <div class="space-x-4">
          <%= link_to "Edit User", edit_admin_user_path(@user), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium" %>
          <%= link_to "Back to Users", admin_users_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- User Info -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Account Information</h2>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="text-sm text-gray-900"><%= @user.email %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Admin Status</dt>
            <dd class="text-sm text-gray-900">
              <% if @user.admin? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Administrator
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  Regular User
                </span>
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Joined</dt>
            <dd class="text-sm text-gray-900"><%= @user.created_at.strftime('%B %d, %Y at %I:%M %p') %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
            <dd class="text-sm text-gray-900"><%= @user.updated_at.strftime('%B %d, %Y at %I:%M %p') %></dd>
          </div>
        </dl>
      </div>

      <!-- Streak Stats -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Streak Statistics</h2>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Current Streak</dt>
            <dd class="text-sm text-gray-900"><%= @user.current_streak || 0 %> days</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Longest Streak</dt>
            <dd class="text-sm text-gray-900"><%= @user.longest_streak || 0 %> days</dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Daily Points</dt>
            <dd class="text-sm text-gray-900"><%= @user.daily_points || 0 %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Last Completed Date</dt>
            <dd class="text-sm text-gray-900">
              <%= @user.last_completed_date&.strftime('%B %d, %Y') || 'Never' %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- User's Habits -->
      <div class="bg-white rounded-lg shadow p-6 lg:col-span-2">
        <h2 class="text-xl font-semibold mb-4">Habits (<%= @user.habits.count %>)</h2>
        <% if @user.habits.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Habit</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Completed</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Creature</th>
                  <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @user.habits.each do |habit| %>
                  <tr>
                    <td class="px-4 py-2 text-sm text-gray-900">
                      <%= habit.display_emoji %> <%= habit.habit_name %>
                    </td>
                    <td class="px-4 py-2 text-sm text-gray-900">
                      <%= habit.completed_on&.strftime('%b %d') || 'Never' %>
                    </td>
                    <td class="px-4 py-2 text-sm text-gray-900">
                      <% if habit.streakling_creature %>
                        <%= habit.streakling_creature.emoji %> <%= habit.streakling_creature.streakling_name %>
                      <% else %>
                        No creature
                      <% end %>
                    </td>
                    <td class="px-4 py-2 text-sm text-gray-900">
                      <% if habit.streakling_creature&.is_dead? %>
                        <span class="text-red-600">Dead</span>
                      <% elsif habit.streakling_creature&.stage == 'eternal' %>
                        <span class="text-yellow-600">Eternal</span>
                      <% else %>
                        <span class="text-green-600">Alive</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-500 text-sm">This user has no habits yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
