<div class="min-h-screen bg-gray-100 py-12 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-800 mb-2">Admin Dashboard</h1>
      <p class="text-gray-600">Manage Streakland data and users</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-2xl font-bold text-blue-600"><%= @users_count %></div>
        <div class="text-gray-600">Users</div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-2xl font-bold text-green-600"><%= @habits_count %></div>
        <div class="text-gray-600">Habits</div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-2xl font-bold text-purple-600"><%= @creatures_count %></div>
        <div class="text-gray-600">Creatures</div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-2xl font-bold text-red-600"><%= @dead_creatures_count %></div>
        <div class="text-gray-600">Dead Creatures</div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-2xl font-bold text-yellow-600"><%= @eternal_creatures_count %></div>
        <div class="text-gray-600">Eternal Creatures</div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-2xl font-bold text-indigo-600"><%= @stages_count %></div>
        <div class="text-gray-600">Stages</div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">Users</h3>
        <div class="space-y-2">
          <%= link_to "View All Users", admin_users_path, class: "block text-blue-600 hover:text-blue-800" %>
          <%= link_to "Add New User", new_admin_user_path, class: "block text-blue-600 hover:text-blue-800" %>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">Habits & Creatures</h3>
        <div class="space-y-2">
          <%= link_to "View All Habits", admin_habits_path, class: "block text-green-600 hover:text-green-800" %>
          <%= link_to "Add New Habit", new_admin_habit_path, class: "block text-green-600 hover:text-green-800" %>
          <p class="text-xs text-gray-500 italic">Creating a habit automatically creates a creature</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">Stages</h3>
        <div class="space-y-2">
          <%= link_to "View All Stages", admin_stages_path, class: "block text-indigo-600 hover:text-indigo-800" %>
          <p class="text-xs text-gray-500 italic">Manage creature evolution stages</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">Quick Actions</h3>
        <div class="space-y-2">
          <%= link_to "Back to App", dashboard_path, class: "block text-gray-600 hover:text-gray-800" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "block text-red-600 hover:text-red-800" %>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">Recent Activity</h3>
      <div class="text-gray-600">
        <p>Recent creatures that reached new stages:</p>
        <ul class="mt-2 space-y-1">
          <% StreaklingCreature.where('updated_at > ?', 1.day.ago).limit(5).each do |creature| %>
            <li class="text-sm">
              <%= creature.streakling_name %> (User: <%= creature.user.email %>) - Stage: <%= creature.stage_name %> <%= creature.stage_emoji %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
