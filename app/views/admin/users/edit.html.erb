<div class="min-h-screen bg-gray-100 py-12 px-4">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-4xl font-bold text-gray-800">Edit User</h1>
          <p class="text-gray-600">Modify user details and permissions</p>
        </div>
        <%= link_to "Back to Users", admin_users_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg font-medium" %>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true) do |form| %>
        <div class="space-y-6">
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div>
            <%= form.label :admin, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <div class="flex items-center">
              <%= form.check_box :admin, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= form.label :admin, "Administrator privileges", class: "ml-2 block text-sm text-gray-900" %>
            </div>
          </div>

          <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
            <h4 class="text-sm font-medium text-blue-800 mb-2">Change Password (Optional)</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.label :password, "New Password", class: "block text-sm font-medium text-blue-700 mb-1" %>
                <%= form.password_field :password, placeholder: "Leave blank to keep current", class: "w-full px-3 py-2 border border-blue-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>

              <div>
                <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-blue-700 mb-1" %>
                <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-blue-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>
            </div>
            <p class="text-xs text-blue-600 mt-2">Leave password fields blank to keep the current password.</p>
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= form.label :current_streak, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :current_streak, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div>
              <%= form.label :longest_streak, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :longest_streak, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
          </div>

          <div>
            <%= form.label :daily_points, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :daily_points, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <div class="flex justify-end space-x-4 pt-4">
            <%= link_to "Cancel", admin_users_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md font-medium" %>
            <%= form.submit "Update User", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
